<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

	<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

	<session-factory>
		<property name="dialect">
			org.hibernate.dialect.MySQLInnoDBDialect
		</property>
		<property name="connection.url">
			jdbc:mysql://localhost:3306/wuye
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password">123456</property>
		<property name="connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<!--连接池-->
		<property name="hibernate.connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>
		<property name="hibernate.c3p0.max_size">50</property>
		<property name="hibernate.c3p0.min_size">1</property>
		<property name="hibernate.c3p0.timeout">120</property>
		<property name="hibernate.c3p0.max_statements">100</property>
		<property name="hibernate.c3p0.idle_test_period">120</property>

		<!-- 是否显示Hibernate持久化操作所生成的SQL语句 -->
		<property name="show_sql">false</property>
		<!-- 是否将SQL脚本进行格式化后再输出-->
		<property name="hibernate.format_sql">false</property>

		<mapping resource="com/wuye/model/Managers.hbm.xml" />
		<mapping resource="com/wuye/model/User.hbm.xml" />
		<mapping resource="com/wuye/model/Menu.hbm.xml" />
		<mapping resource="com/wuye/model/Permissions.hbm.xml" />
		<mapping resource="com/wuye/model/House.hbm.xml" />
		<mapping resource="com/wuye/model/Car.hbm.xml" />

	</session-factory>

</hibernate-configuration>